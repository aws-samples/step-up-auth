  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "Launch Webpack Development Server (WDS)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack",
      "args": [
        "serve",
        "--config", "webpack.config.js",
        "--progress",
        "--env",
          "NODE_ENV=development",
          "AWS_REGION=us-east-1",
          "USER_POOL_ID=us-east-1_XYZ",
          "CLIENT_ID=C1234567890",
          "API_GATEWAY_API_NAME=step-up-auth",
          "API_GATEWAY_API_ENDPOINT=https://abcdef.execute-api.us-east-1.amazonaws.com/dev/"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Unit Tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceFolder}",
      "args": [
          "--runInBand",
          "--coverage=false",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "trace": "all"
    }
  ]
}
